<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col w-full max-w-lg">
    <div class="text-center mb-4">
      <h1 class="text-5xl font-bold">Olá, <%= @person.name %>!</h1>
      <p class="py-6">
        <% if @person.has_password? %>
        Coloque sua senha para ver seu amigo sorteado novamente
        <% else %>
        Crie uma senha para visualizar quem você sorteou!
        <% end %>
      </p>
    </div>

    <div class="card w-full bg-base-100 shadow-2xl">
      <div class="card-body">
        <%= form_with url: authenticate_participant_group_path(@group), method: :post, data: { turbo: false } do |f| %>
          <% if flash[:alert] %>
            <div role="alert" class="alert alert-error mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><%= flash[:alert] %></span>
            </div>
          <% end %>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text text-base font-medium">
                <% if @person.has_password? %>
                Senha
                <% else %>
                Crie uma senha
                <% end %>
              </span>
            <% end %>
            <%= f.password_field :password,
                class: "input input-bordered input-lg w-full",
                autofocus: true,
                required: true %>
            <label class="label">
              <span class="label-text-alt">
                <% if @person.has_password? %>
                Esta é a sua senha pessoal
                <% else %>
                    Escolha uma senha que você vá se lembrar depois!
                <% end %>
              </span>
            </label>
          </div>

          <% unless @person.has_password? %>
            <div class="form-control mt-4">
              <%= f.label :password_confirmation, class: "label" do %>
                <span class="label-text text-base font-medium">Confirme sua senha</span>
              <% end %>
              <%= f.password_field :password_confirmation,
                  class: "input input-bordered input-lg w-full",
                  required: true %>
            </div>
          <% end %>

          <div class="form-control mt-8">
            <%= f.submit @person.has_password? ? "Entrar" : "Criar senha e entrar", class: "btn btn-primary btn-lg w-full text-lg" %>
          </div>
        <% end %>

        <div class="divider">OU</div>

        <div class="text-center">
          <%= link_to "Volte para a seleção de participantes", participant_group_path(@group), class: "btn btn-ghost btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
