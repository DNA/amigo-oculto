<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col w-full">
    <% if notice %>
      <div role="alert" class="alert alert-success w-full mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= notice %></span>
      </div>
    <% end %>

    <% if alert %>
      <div role="alert" class="alert alert-error w-full mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= alert %></span>
      </div>
    <% end %>

    <div class="text-center mb-4">
      <h1 class="text-5xl font-bold"><%= @group.name %></h1>
      <p class="py-6">Manage your Secret Santa group</p>
    </div>

    <div class="card w-full bg-base-100 shadow-2xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Participants
          <span class="badge badge-primary badge-lg ml-2"><%= @group.people.count %></span>
        </h2>

        <% if @group.people.any? %>
          <div class="overflow-x-auto">
            <table class="table table-zebra">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Parent</th>
                  <th>Exclusions</th>
                  <% if @group.draw_generated? %>
                    <th>Assignment</th>
                  <% end %>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @group.people.order(:name).each_with_index do |person, index| %>
                  <tr>
                    <th><%= index + 1 %></th>
                    <td class="font-medium"><%= person.name %></td>
                    <td>
                      <% if person.parent %>
                        <div class="flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                          <span class="text-sm"><%= person.parent.name %></span>
                        </div>
                      <% else %>
                        <span class="text-base-content/50 text-sm">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if person.excluded_people.any? %>
                        <div class="flex flex-wrap gap-1">
                          <% person.excluded_people.each do |excluded_person| %>
                            <span class="badge badge-outline badge-error"><%= excluded_person.name %></span>
                          <% end %>
                        </div>
                      <% else %>
                        <span class="text-base-content/50 text-sm">No exclusions</span>
                      <% end %>
                    </td>
                    <% if @group.draw_generated? %>
                      <td>
                        <% if person.my_draw %>
                          <div id="admin-reveal-<%= person.id %>" class="inline-block cursor-pointer hover:opacity-80" onclick="toggleAdminReveal(<%= person.id %>)">
                            <span id="admin-hidden-<%= person.id %>" class="badge badge-primary gap-2">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                              </svg>
                              Click to reveal
                            </span>
                            <span id="admin-shown-<%= person.id %>" class="badge badge-success hidden gap-2">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                              </svg>
                              <%= person.my_draw.receiver.name %>
                            </span>
                          </div>
                        <% else %>
                          <span class="text-base-content/50 text-sm">-</span>
                        <% end %>
                      </td>
                    <% end %>
                    <td>
                      <% if person.has_password? %>
                        <%= button_to reset_person_password_group_path(@group, person_id: person.id), method: :post, class: "btn btn-error btn-xs", data: { turbo_confirm: "Are you sure you want to reset #{person.name}'s password?" } do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                          </svg>
                          Reset
                        <% end %>
                      <% else %>
                        <span class="badge badge-ghost badge-sm">No password set</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <script>
            function toggleAdminReveal(personId) {
              const hidden = document.getElementById('admin-hidden-' + personId);
              const shown = document.getElementById('admin-shown-' + personId);

              if (hidden.classList.contains('hidden')) {
                hidden.classList.remove('hidden');
                shown.classList.add('hidden');
              } else {
                hidden.classList.add('hidden');
                shown.classList.remove('hidden');
              }
            }
          </script>
        <% else %>
          <div class="alert">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-bold">No participants yet</h3>
              <div class="text-xs">Start by adding people to your group!</div>
            </div>
          </div>
        <% end %>

        <div class="card-actions justify-between mt-6 gap-4">
          <% if @group.draw_generated? %>
            <div class="alert alert-info flex-1">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Draw has been generated! Participants can now check their assignments.</span>
            </div>
          <% else %>
            <%= button_to generate_draw_group_path(@group), method: :post, class: "btn btn-success btn-lg flex-1", data: { turbo_confirm: "Are you sure? This will generate the Secret Santa assignments and cannot be undone." } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5" />
              </svg>
              Generate Draw
            <% end %>
          <% end %>

          <button class="btn btn-primary btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Participant
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
